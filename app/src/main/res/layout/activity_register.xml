<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">



    <TextView
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:layout_marginTop="190dp"
        android:gravity="center"
        android:text="MisterCure"
        android:textSize="35dp"></TextView>

        <EditText
            android:id="@+id/email"
            style="@style/common_login_edit"
            android:layout_gravity="center"
            android:drawableLeft="@drawable/ic_id"
            android:hint="@string/input_login_id_hint"
            android:maxLength="32"></EditText>

        <EditText
            android:id="@+id/password"
            style="@style/common_login_edit"
            android:layout_gravity="center"
            android:drawableLeft="@drawable/ic_password"
            android:hint="@string/input_login_pw_hint"
            android:maxLength="32"></EditText>

        <Button
            android:id="@+id/register_Btn"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:text="Register"></Button>


</androidx.appcompat.widget.LinearLayoutCompat>